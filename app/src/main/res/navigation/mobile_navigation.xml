<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="id.gwijaya94.navigationcomponent.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="id.gwijaya94.navigationcomponent.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="id.gwijaya94.navigationcomponent.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/nav_cart"
        android:name="id.gwijaya94.navigationcomponent.CartFragment"
        android:label="@string/menu_cart"
        tools:layout="@layout/fragment_cart" />
    <activity
        android:id="@+id/nav_subway"
        android:name="id.gwijaya94.navigationcomponent.SubwayActivity"
        android:label="SubwayActivity" />
    <activity
        android:id="@+id/bottomNavigationActivity"
        android:name="id.gwijaya94.navigationcomponent.BottomNavigationActivity"
        android:label="BottomNavigationActivity" />
    <activity
        android:id="@+id/viewPagerActivity"
        android:name="id.gwijaya94.navigationcomponent.ViewPagerActivity"
        android:label="ViewPagerActivity" />
</navigation>